<%- layout("/layouts/boilerplate.ejs") %>

<body>
  <div class="row mt-3">
    <div class="col-8 offset-2">
      
      <h3 class="mb-4">Edit Listing</h3>

      <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"  novalidate class="needs-validation" enctype="multipart/form-data">
        
        <div class="mb-3">
          <label for="title" class="form-label">Title</label>
          <input
            name="listing[title]"
            value="<%= listing.title %>"
            type="text"
            class="form-control"
            required
          >
        <div class="invalid-feedback">Enter correct Title</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label">Description</label>
          <textarea
            name="listing[description]"
            class="form-control"
            required
          ><%= listing.description %></textarea>
          <div class="invalid-feedback">Enter short description</div>
        </div>

        <div class="mb-3">
          <label class="form-label">Current Image</label>
          <div class="mb-2">
            <% 
              let thumbnailUrl = listing.image.url;
              // Add Cloudinary transformations for reduced size and quality
              if (thumbnailUrl.includes('cloudinary.com')) {
                thumbnailUrl = thumbnailUrl.replace('/upload/', '/upload/w_200,h_200,c_fill,q_30/');
              }
            %>
            <img src="<%= thumbnailUrl %>" alt="listing image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;">
          </div>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label">Upload New Image</label>
          <input
            name="listing[image]"
            type="file"
            accept="image/*"
            class="form-control"
          >
        </div>
        <div class="row">
        <div class="mb-3 col-md-4">
          <label for="price" class="form-label">Price</label>
          <input
            name="listing[price]"
            value="<%= listing.price %>"
            type="number"
            class="form-control"
            required
          >
        <div class="invalid-feedback">Enter valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <label for="country" class="form-label">Country</label>
          <input
            name="listing[country]"
            value="<%= listing.country %>"
            type="text"
            class="form-control"
            required
          >
          <div class="invalid-feedback">Enter your country</div>
        </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label">Location</label>
          <input
            name="listing[location]"
            value="<%= listing.location %>"
            type="text"
            class="form-control"
            required
          >
          <div class="invalid-feedback">Enter your location</div>
        </div>

        <div class="mb-3">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" class="form-select" required>
            <option value="Trending" <%= listing.category === 'Trending' ? 'selected' : '' %>>ğŸ”¥ Trending</option>
            <option value="Rooms" <%= listing.category === 'Rooms' ? 'selected' : '' %>>ğŸ›ï¸ Rooms</option>
            <option value="Iconic Cities" <%= listing.category === 'Iconic Cities' ? 'selected' : '' %>>ğŸ™ï¸ Iconic Cities</option>
            <option value="Castles" <%= listing.category === 'Castles' ? 'selected' : '' %>>ğŸ° Castles</option>
            <option value="Pools" <%= listing.category === 'Pools' ? 'selected' : '' %>>ğŸŠ Pools</option>
            <option value="Camping" <%= listing.category === 'Camping' ? 'selected' : '' %>>â›º Camping</option>
            <option value="Farms" <%= listing.category === 'Farms' ? 'selected' : '' %>>ğŸšœ Farms</option>
            <option value="Arctic" <%= listing.category === 'Arctic' ? 'selected' : '' %>>â„ï¸ Arctic</option>
            <option value="Beach" <%= listing.category === 'Beach' ? 'selected' : '' %>>ğŸ–ï¸ Beach</option>
            <option value="Mountains" <%= listing.category === 'Mountains' ? 'selected' : '' %>>â›°ï¸ Mountains</option>
          </select>
          <div class="invalid-feedback">Please select a category</div>
        </div>

        <button class="btn btn-dark mt-3">Submit</button>
        <br><br>
      </form>

    </div>
  </div>
</body>
